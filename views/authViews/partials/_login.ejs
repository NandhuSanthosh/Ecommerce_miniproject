
<div class="form-content w-100" >
<div class="form-header text-center">
    <% if(locals.associate == 'admin') { %>
        <h1>Admin Login</h1>    
    <% } else { %>
            <h1>Welcome back</h1>
    <% } %>
        
    <p>Shop Smarter, Shop Easier: Your One-Step Online Marketplace</p>
</div>
<div class="form bg-white p-4 border-20">
    <form>
        <div class="form-group d-flex form-control mb-3" id="emailMobile">
            <input type="text" class="form-input" aria-describedby="emailMobile"
            placeholder="Email<% if( locals.associate != 'admin') { %> / Mobile  <% } %>">             
            <span data-tooltip="I’m the tooltip text." class="d-none">
                <i class="bi bi-exclamation-circle-fill error-icon"></i>
            </span>
        </div>
        <div class="form-group d-flex mb-3  form-control" id="password">
            <input type="password" class=" form-input" placeholder="Password">
            <span data-tooltip="I’m the tooltip text." class="d-none">
                <i class="bi bi-exclamation-circle-fill error-icon"></i>
            </span>
        </div>
        <button id="loginBtn" class="btn btn-primary w-100">Login</button>
    </form>
