<!-- Modal -->
<div class="modal fade" id="productModal" data-backdrop="static" tabindex="-1" role="dialog"
    aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalheader">
                    <!-- js injection -->
                </h5>
            </div>
            <div class="modal-body">
                <div class="card">
                    <div class="card-body">
                        <form>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">
                                    <div class="form-group">
                                        <label for="category">Name</label>
                                        <textarea class="form-control" id="product_name"></textarea>
                                    </div>
                                    <div class="form-group">
                                        <label for="description">Brand</label>
                                        <input type="text" class="form-control" id="product_brand" rows="3">
                                    </div>
                                    <div class="form-group">
                                        <label for="description">Model Name</label>
                                        <input type="text" class="form-control" id="product_model" rows="3">
                                    </div>
                                    <div class="form-group">
                                        <label for="description">Color</label>
                                        <input type="text" class="form-control" id="product_color" rows="3">
                                    </div>
                                </li>
                                <li class="list-group-item">
                                    <div class="form-group">
                                        <label for="description">Actual Price</label>
                                        <input type="text" class="form-control" id="product_actualPrice" rows="3">
                                    </div>
                                    <div class="form-group">
                                        <label for="description">Current Price</label>
                                        <input type="text" class="form-control" id="product_currentPrice" rows="3">
                                    </div>
                                    <div class="form-group">
                                        <label for="description">Discount</label>
                                        <input type="text" class="form-control" id="product_discount" rows="3">
                                    </div>
                                </li>
                                <li class="list-group-item">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="product_isFreeDelivery">
                                        <label class="form-check-label" for="flexCheckDefault">
                                            Free Delivery
                                        </label>
                                    </div>
                                    <div class="form-group">
                                        <input type="checkbox" class="form-check-input" id="product_isPayOnDelivery">
                                        <label class="form-check-label" for="description">Pay on Delivery</label>
                                    </div>
                                    <div class="form-group">
                                        <label for="description">Replacement</label>
                                        <input type="text" class="form-control" id="product_replacement" rows="3">
                                    </div>
                                    <div class="form-group">
                                        <label for="description">Warranty</label>
                                        <input type="text" class="form-control" id="product_warranty" rows="3">
                                    </div>
                                </li>
                                <li class="list-group-item" id="imageConatiner">
                                </li>
                                <li class="list-group-item" id="addImageBtnContainer">
                                    <div class="mb-3">
                                        <label for="formFile" class="form-label">Add more image</label>
                                        <input id="imageInput" class="form-control" type="file" >
                                        <button id="addImageBtn" type="button" class="btn btn-primary disabled my-2">Add</button>
                                        <div id="imagePreviewContainer"></div>
                                    </div>
                                </li>
                            </ul>
                        </form>
                    </div>
                
                </div>
            </div>
            <div class="modal-footer justify-content-between">
                <div>
                    <button type="button" id="deleteProduct" class="btn btn-danger d-none" data-dismiss="modal">Delete</button>
                    <button type="button" id="updateProduct" class="btn btn-warning d-none" data-dismiss="modal">Update</button>
                    <button type="button" id="addProduct" class="btn btn-primary d-none" data-dismiss="modal">Add</button>
                </div>
                <div>
                    <button id="modalCloseBtn" type="button" class="btn btn-secondary"
                        data-dismiss="modal">Close</button>
                    <!-- <button type="button" class="btn btn-primary">Save changes</button> -->
                </div>
            </div>
        </div>
    </div>
</div>